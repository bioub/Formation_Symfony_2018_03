{% extends '::base.html.twig' %}

{% block title %}{{contact.prenom}} {{contact.nom}}{% endblock %}

{% block body %}
    <h3>{{contact.prenom}} {{contact.nom}}</h3>

    {% if contact.societe %}
    <div class="row">
        <div class="col s3">
            <b>Société</b>
        </div>
        <div class="col s9">
            {{contact.societe.nom}}
        </div>
    </div>
    {% endif %}

    {% if contact.email %}
    <div class="row">
        <div class="col s3">
            <b>Email</b>
        </div>
        <div class="col s9">
            {{contact.email}}
        </div>
    </div>
    {% endif %}

    {% if contact.telephone %}
    <div class="row">
        <div class="col s3">
            <b>Téléphone</b>
        </div>
        <div class="col s9">
            {{contact.telephone}}
        </div>
    </div>
    {% endif %}
            
{% endblock %}